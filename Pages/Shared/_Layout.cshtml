@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BB77QKKDGP"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-BB77QKKDGP');
    </script>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lil gob slayer guides</title>
    <link rel="stylesheet" href="~/css/bootstrap-custom.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lilgobguides.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/trix@2.1.15/dist/trix.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body class="site-background d-flex flex-column" data-bs-theme="dark">
    <header class="bg-transparent">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index">
                    <i class="bi bi-fire"></i> lil gob slayer guides
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse flex-column flex-sm-row align-items-start align-items-sm-center justify-content-sm-end column-gap-3">
                    <ul class="navbar-nav flex-grow-1 d-sm-none">
                        @await Html.PartialAsync("_NavLinks")
                    </ul>

                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="h-auto d-flex flex-row container-xxl overflow-visible">
        <nav class="bg-transparent pe-4 d-none d-sm-block text-end">
            <ul class="navbar-nav">
                @await Html.PartialAsync("_NavLinks")
            </ul>
        </nav>
        <section class="box-shadow flex-grow-1 p-4 container border-start border-top border-bottom bg-black">
            @RenderBody()
        </section>
    </main>

    <footer class="box-shadow text-muted p-4 text-light">
        <div class="d-flex justify-content-between align-items-center container">
            <span>&copy; 2025 - lil gob slayer guides</span>
       
            <img src="/images/wolf.png" width="25px" height="25px" alt="awooo!" title="awooo!" /> 
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/trix-upload.js" defer></script>
    @* <script src="~/js/trix-config.js" defer></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>