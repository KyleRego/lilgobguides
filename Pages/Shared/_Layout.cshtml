<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - lilgobguides</title>
    <link rel="stylesheet" href="~/css/bootstrap-custom.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lilgobguides.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/trix@2.1.15/dist/trix.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

</head>
<body>
    <header class="morytania-background">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow" data-bs-theme="dark">
            <div class="container">
                <a class="navbar-brand text-light" asp-area="" asp-page="/Index">lilgobguides</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Posts/Skilling">Skilling</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Minigames</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Items</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-page="/Index">Bosses</a>
                        </li>
                        
                    </ul>

                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-grow-1 container my-4">
        @RenderBody()
    </main>

    <footer class="outside-legends-guild-background border-top text-muted p-4 text-light"
            data-bs-theme="dark">
        <div class="d-flex justify-content-between container">
            &copy; 2025 - lilgobguides
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap-5.3.6-dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/trix@2.1.15/dist/trix.umd.min.js"></script>
    <script src="~/js/trix-upload.js"></script>
    <script src="~/js/trix-config.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>