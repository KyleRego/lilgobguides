@page
@using Microsoft.AspNetCore.Identity
@model lilgobguides.Pages.Posts.ShowPostModel
@{
    ViewData["Title"] = Model.Post?.Title ?? "Post not found";
}

@inject SignInManager<IdentityUser> SignInManager

@if (Model.Post == null)
{
    <h1>Post not found</h1>
    <p><a asp-page="/Index">Back to list</a></p>
}
else
{
    <article>
        <h1>@Model.Post.Title</h1>
        <p>@Model.Post.Content</p>
    </article>
    <p><a asp-page="/Index">← Back to all posts</a></p>
}

@if (SignInManager.IsSignedIn(User))
{
    <a asp-page="/Posts/EditPost" asp-route-id="@Model.Post?.Id">Edit Post</a>
}