@model lilgobguides.Models.Post

<input type="hidden" asp-for="Id" />
<input type="hidden" asp-for="Categorization.PostId" />
<div>
    <label asp-for="Title" class="form-label"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title"></span>
</div>
<div class="my-2">
    <label for="Content" class="form-label">Content</label>
    <input id="Content" type="hidden" asp-for="Content" />
    <trix-editor input="Content"></trix-editor>
    <span asp-validation-for="Content" class="text-danger"></span>
</div>
<div class="mt-2">
    <div class="form-check">
        <label class="form-check-label" asp-for="Categorization.Skilling"></label>
        <input class="form-check-input" type="checkbox" asp-for="Categorization.Skilling" class="form-control" />
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="Categorization.Minigame"></label>
        <input class="form-check-input" type="checkbox" asp-for="Categorization.Minigame" class="form-control" />
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="Categorization.Item"></label>
        <input class="form-check-input" type="checkbox" asp-for="Categorization.Item" class="form-control" />
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="Categorization.Boss"></label>
        <input class="form-check-input" type="checkbox" asp-for="Categorization.Boss" class="form-control" />
    </div>
</div>